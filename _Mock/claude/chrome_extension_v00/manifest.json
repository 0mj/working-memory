{
  "manifest_version": 3,
  "name": "Page Title Changer",
  "version": "1.0",
  "description": "Change the page title using a keyboard shortcut",
  "permissions": ["activeTab", "scripting"],
  "commands": {
    "change-title": {
      "suggested_key": {
        "default": "Ctrl+Shift+F"
      },
      "description": "Change the page title"
    }
  },
  "action": {
    "default_popup": "popup.html"
  }
}